{
  "name": "vite-plugin-md-blog",
  "private": false,
  "version": "0.1.0",
  "description": "A zero-cost static blog generator using Vite's Environment API",
  "type": "module",
  "main": "./lib/plugin/index.js",
  "types": "./lib/plugin/index.d.ts",
  "bin": {
    "md-blog": "./lib/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./lib/plugin/index.d.ts",
      "import": "./lib/plugin/index.js"
    },
    "./cli": "./lib/cli/index.js"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node lib/cli/index.js dev",
    "build": "node lib/cli/index.js build",
    "preview": "node lib/cli/index.js preview",
    "compile": "tsc && chmod +x lib/cli/index.js",
    "prepublishOnly": "npm run compile"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "blog",
    "markdown",
    "static-site-generator",
    "ssg",
    "environment-api"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silverlila/vite-plugin-md-blog"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.6",
    "@tailwindcss/vite": "^4.1.14",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^5.0.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.19.4",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "react": "^18.0.0 | ^19.0.0"
  },
  "dependencies": {
    "marked": "^16.4.1"
  }
}
